{
  "name": "holo-card-css-animation",
  "version": "1.0.0",
  "description": "Holographic card animation with CSS",
  "scripts": {
    "build": "npm run build:pug && npm run build:scss && npm run copy:assets",
    "build:pug": "pug src/index.pug -o dist",
    "build:scss": "sass src/style.scss dist/style.css",
    "copy:assets": "copyfiles -u 1 src/*.svg dist",
    "watch": "concurrently \"npm run watch:pug\" \"npm run watch:scss\"",
    "watch:pug": "pug src/index.pug -o dist --watch",
    "watch:scss": "sass src/style.scss dist/style.css --watch",
    "dev": "npm run build && npm run watch"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.69.0"
  }
}
